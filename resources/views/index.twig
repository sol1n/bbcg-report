<!doctype html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta name="csrf-token" content="{{ csrf_token() }}">

        <title>B2bcg report</title>

        <link rel="stylesheet" href="{{ asset('/css/app.css')  }}?44">
    </head>
    <body>
        <div class="wrapper">
            <h1>{{ title }}</h1>
            <div class="plot">
                <div class="plot-wrapper">
                    <canvas data-plot="{{ data|json_encode }}"></canvas>
                </div>
            </div>
            <div class="legend">
                {% for part in parts %}
                    <div class="legend-item">
                        <h2>{{ part.title }}</h2>
                        <div class="legend-item-description">
                            {{ part.description|raw }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </body>

    <script src="{{ asset('/js/app.js') }}"></script>
</html>
